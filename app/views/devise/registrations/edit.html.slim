h1.h2.mb-4 = t('views.devise.registrations.edit.title')

= simple_form_for resource,
                  as: resource_name,
                  url: registration_path(resource_name),
                  html: { method: :put },
                  data: { turbo: false } do |f|

  = f.input :email, required: true, autofocus: true
  = f.input :password,
            hint: t('simple_form.hints.leave_field'),
            required: false,
            input_html: { autocomplete: "new-password" }
  = f.input :password_confirmation,
            required: false,
            input_html: { autocomplete: "new-password" }
  = f.input :current_password,
            hint: t('simple_form.hints.require_current_password_to_confirm'),
            required: true,
            input_html: { autocomplete: "current-password" }

  div.d-flex.gap-2
    = f.button :submit, t('simple_form.submit_buttons.profile.edit'), class: 'btn-primary'
    = link_to t('views.general.buttons.get_back'), :back, class: 'btn'
